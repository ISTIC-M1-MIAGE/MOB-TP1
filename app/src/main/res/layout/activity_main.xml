<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topScreen"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:paddingStart="25dp"
                android:paddingTop="15dp"
                android:paddingEnd="25dp"
                android:paddingBottom="15dp"
                android:text="2-2"
                android:textAlignment="textEnd"
                android:textColor="#7E7E7E"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bottomScreen"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:gravity="bottom"
                android:includeFontPadding="true"
                android:paddingStart="25dp"
                android:paddingTop="15dp"
                android:paddingEnd="25dp"
                android:paddingBottom="15dp"
                android:text="0"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingStart="25dp"
                android:paddingTop="25dp"
                android:paddingEnd="25dp"
                app:columnCount="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rowCount="5">

                <Button
                    android:id="@+id/btnAC"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#C5C5C5"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="AC"
                    android:textColor="#000000"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:strokeColor="#1A1A1A" />

                <Button
                    android:id="@+id/btnDel"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#C5C5C5"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="Del"
                    android:textColor="#000000"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:strokeColor="#1A1A1A" />

                <Button
                    android:id="@+id/btnModulo"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#C5C5C5"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="%"
                    android:textColor="#000000"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="2"
                    app:layout_row="0"
                    app:strokeColor="#1A1A1A" />

                <Button
                    android:id="@+id/btnDivision"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#FFC107"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="/"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="3"
                    app:layout_row="0"
                    app:strokeColor="#1A1A1A" />

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="0"
                    app:layout_row="1"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="1"
                    app:layout_row="1"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="2"
                    app:layout_row="1"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btnMulti"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#FFC107"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="X"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="3"
                    app:layout_row="1"
                    app:strokeColor="#1A1A1A" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#FFC107"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="3"
                    app:layout_row="2"
                    app:strokeColor="#1A1A1A" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="0"
                    app:layout_row="2"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="1"
                    app:layout_row="2"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="2"
                    app:layout_row="2"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="0"
                    app:layout_row="3"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="1"
                    app:layout_row="3"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="2"
                    app:layout_row="3"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#FFC107"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="3"
                    app:layout_row="3"
                    app:strokeColor="#1A1A1A" />

                <Button
                    android:id="@+id/btnPoint"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text=","
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="0"
                    app:layout_row="4"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="1"
                    app:layout_row="4"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btnUnaryMinus"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#333333"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="+/-"
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="2"
                    app:layout_row="4"
                    app:strokeColor="#2B2D30" />

                <Button
                    android:id="@+id/btnResult"
                    android:layout_width="75dp"
                    android:layout_height="85dp"
                    android:layout_margin="7.25dp"
                    android:backgroundTint="#FFC107"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="="
                    android:textColor="#FFFFFF"
                    android:textColorLink="#673AB7"
                    android:textSize="24sp"
                    app:cornerRadius="100dp"
                    app:iconPadding="0dp"
                    app:layout_column="3"
                    app:layout_row="4"
                    app:strokeColor="#1A1A1A" />

            </androidx.gridlayout.widget.GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>